width="1512"
height="1134"
srcset="https://sharelter.github.io/p/powerbook-first-look/front_hu_b9adfc1e66f05f42.jpg 480w, https://sharelter.github.io/p/powerbook-first-look/front_hu_c77c35eada1f7f76.jpg 1024w"
loading="lazy"
alt="front"
class="gallery-image"
